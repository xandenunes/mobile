<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".Credito">

    <View
        android:id="@+id/containerComponentsCred1"
        style="@style/ContainerComponentsCred1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/containerComponentsCred2"
        style="@style/ContainerComponentsCred2"

        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerComponentsCred1" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/txt_titleCred"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred1"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred1"
        app:layout_constraintTop_toTopOf="@id/containerComponentsCred1"
        app:layout_constraintVertical_bias="0.217" />

    <TextView
        android:id="@+id/text_credito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textcredito_txt"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred1"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred1"
        app:layout_constraintTop_toTopOf="@id/text_title" />

    <TextView
        android:id="@+id/txtTituloProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/txtTituloProg"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred2"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred2"
        app:layout_constraintTop_toTopOf="@id/containerComponentsCred2"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/txtProgramador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_creditos"
        android:text="@string/txtProgramador1_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred2"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred2"
        app:layout_constraintTop_toTopOf="@id/txtTituloProg"
        app:layout_constraintVertical_bias="0.200" />

    <TextView
        android:id="@+id/txtProgramador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_creditos"
        android:text="@string/txtProgramador2_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred2"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred2"
        app:layout_constraintTop_toTopOf="@id/txtProgramador1"
        app:layout_constraintVertical_bias="0.200" />

    <TextView
        android:id="@+id/txtProgramador3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_creditos"
        android:text="@string/txtProgramador3_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred2"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred2"
        app:layout_constraintTop_toTopOf="@id/txtProgramador2"
        app:layout_constraintVertical_bias="0.200" />

    <TextView
        android:id="@+id/txtProgramador4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_creditos"
        android:text="@string/txtProgramador4_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred2"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred2"
        app:layout_constraintTop_toTopOf="@id/txtProgramador3"
        app:layout_constraintVertical_bias="0.314" />

    <TextView
        android:id="@+id/txtProgramador5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_creditos"
        android:text="@string/txtProgramador5_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsCred2"
        app:layout_constraintStart_toStartOf="@id/containerComponentsCred2"
        app:layout_constraintTop_toTopOf="@id/txtProgramador4"
        app:layout_constraintVertical_bias="0.448" />


</androidx.constraintlayout.widget.ConstraintLayout>